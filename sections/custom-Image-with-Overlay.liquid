{% schema %}
{
  "name": "Image with Overlay1",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title_line1",
      "label": "Title Line 1",
      "default": "Wildlife Watching,"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "Title Line 2",
      "default": "Unforgettable Discovering"
    },
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote Text",
      "default": "PeckPerk incorporates a squirrel-proof algorithm designed to effectively deter squirrels, ensuring that the feeder remains exclusively accessible to birds."
    }
  ],
  "presets": [
    {
      "name": "Image with Overlay Text Box"
    }
  ]
}
{% endschema %}

<div class="custom-section">
  <div class="container">
    <!-- 背景图 -->
    {% if section.settings.background_image %}
      <div class="background-image" style="background-image: url('{{ section.settings.background_image | image_url: width: 1600 }}');"></div>
    {% endif %}

    <!-- 图片容器 -->
    <div class="image-wrapper">
      <!-- 桌面端图片 -->
      <div class="desktop-image">
        {% if section.settings.image %}
          {{ section.settings.image | image_url: width: 400 | image_tag: loading: 'lazy', class: 'main-image' }}
        {% endif %}
      </div>
      
      <!-- 移动端图片 -->
      <div class="mobile-image">
        {% if section.settings.mobile_image %}
          {{ section.settings.mobile_image | image_url: width: 400 | image_tag: loading: 'lazy', class: 'main-image' }}
        {% else %}
          {{ section.settings.image | image_url: width: 400 | image_tag: loading: 'lazy', class: 'main-image' }}
        {% endif %}
      </div>
    </div>

    <!-- 标题块 -->
    <div class="title-container">
      <div class="title-content">
        <div class="foreground-title">
          <h2>{{ section.settings.title_line1 }}</h2>
          <h2>{{ section.settings.title_line2 }}</h2>
        </div>
      </div>
    </div>

    <!-- 文本框 -->
    <div class="text-box">
      <div class="quote-box">
        <p class="quote">{{ section.settings.quote_text }}</p>
      </div>
    </div>
  </div>
</div>

<style>
  /* 通用样式 */
  #shopify-section-{{ section.id }} .custom-section {
    background-color: #f9f5ec;
    padding: 160px 0;
    position: relative;
    overflow: hidden;
  }

  /* 背景图样式 */
  #shopify-section-{{ section.id }} .background-image {
    position: absolute;
    left: 700px;
    top: 26%;
    transform: translateY(-50%);
    width: 800px;
    height: 400px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    z-index: 0;
    pointer-events: none;
  }

  /* 图片容器 */
  #shopify-section-{{ section.id }} .image-wrapper {
    position: absolute;
    left: 16%;
    transform: translateY(-20%) translateX(-10%);
    z-index: 2;
  }

  /* 主图片样式 */
  #shopify-section-{{ section.id }} .main-image {
    width: 400px;
    border-radius: 20px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  /* 标题样式 */
  #shopify-section-{{ section.id }} .title-container {
    position: relative;
    margin-bottom: 30px;
    justify-content: flex-end;
    padding-left: 700px;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .foreground-title h2 {
    font-size: 28px;
    color: #333;
    margin: 0;
    font-weight: 600;
    text-align: left;
    line-height: 1.3;
  }

  /* 文本框样式 */
  #shopify-section-{{ section.id }} .text-box {
    background-color: #eee5d3;
    border-radius: 20px;
    padding: 60px 40px 60px 710px;
    position: relative;
    z-index: 1;
    margin-top: 40px;
  }

  /* 引号样式 */
  #shopify-section-{{ section.id }} .quote {
    font-size: 16px;
    color: #333;
    position: relative;
    display: inline-block;
    max-width: 500px;
    line-height: 1.6;
  }

  #shopify-section-{{ section.id }} .quote::before {
    content: "“";
    font-size: 50px;
    position: absolute;
    left: -15px;
    top: -43px;
    color: #999;
  }

  #shopify-section-{{ section.id }} .quote::after {
    content: "”";
    font-size: 50px;
    position: absolute;
    right: -15px;
    bottom: -40px;
    color: #999;
  }

  /* 移动端样式 */
  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .custom-section {
      padding: 30px 0 !important;
    }

    /* 隐藏桌面图片 */
    .desktop-image {
      display: none;
    }

    /* 显示移动图片 */
    .mobile-image {
      text-align: center;
    }

    #shopify-section-{{ section.id }} .image-wrapper {
      position: static;
      transform: none;
      margin: 0 auto 20px;
    }

    #shopify-section-{{ section.id }} .main-image {
      height: auto;
    }

    #shopify-section-{{ section.id }} .background-image {
      left: 50%;
      top: 47%;
      width: 90%;
      height: 300px;
      transform: translateX(-50%);
    }

    #shopify-section-{{ section.id }} .title-container {
      padding-left: 0;
      text-align: center;
    }

    #shopify-section-{{ section.id }} .foreground-title h2 {
      font-size: 20px;
      text-align: center;
      padding: 0 15px;
    }

    #shopify-section-{{ section.id }} .text-box {
      padding: 40px 20px;
      margin: 20px 15px 0;
    }

    #shopify-section-{{ section.id }} .quote {
      font-size: 14px;
    }

    #shopify-section-{{ section.id }} .quote::after {
      right: 0;
      bottom: -60px;
    }
  }

  /* 桌面端隐藏移动图片 */
  @media screen and (min-width: 769px) {
    .mobile-image {
      display: none;
    }
  }
</style>