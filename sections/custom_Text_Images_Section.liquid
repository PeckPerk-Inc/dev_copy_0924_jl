{% schema %}
{
  "name": "Text & Images Section",
  "settings": [
    {
      "type": "text",
      "id": "heading_1",
      "label": "Heading 1",
      "default": "Main Heading"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading 2",
      "default": "Sub Heading"
    },
    {
      "type": "text",
      "id": "heading_3",
      "label": "Heading 3",
      "default": "Additional Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text Content",
      "default": "This is a sample text block."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "image_1_title",
      "label": "Image 1 Title",
      "default": "Title 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "image_2_title",
      "label": "Image 2 Title",
      "default": "Title 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "image_3_title",
      "label": "Image 3 Title",
      "default": "Title 3"
    }
  ],
  "presets": [
    {
      "name": "Text & Images Section"
    }
  ]
}
{% endschema %}
<div class="custom-section">
  <div class="page-width">
    <div class="content">
      <h2 class="title title-left">{{ section.settings.heading_1 }}</h2>
      <h3 class="title title-right">{{ section.settings.heading_2 }}</h3>
      <h3 class="title title-left offset">{{ section.settings.heading_3 }}</h3>
      <p>{{ section.settings.text }}</p>
    </div>
    <div class="images">
      <div class="image-box">
        <img src="{{ section.settings.image_1 | img_url: 'medium' }}" alt="{{ section.settings.image_1_title }}">
        <p>{{ section.settings.image_1_title }}</p>
      </div>
      <div class="image-box">
        <img src="{{ section.settings.image_2 | img_url: 'medium' }}" alt="{{ section.settings.image_2_title }}">
        <p>{{ section.settings.image_2_title }}</p>
      </div>
      <div class="image-box">
        <img src="{{ section.settings.image_3 | img_url: 'medium' }}" alt="{{ section.settings.image_3_title }}">
        <p>{{ section.settings.image_3_title }}</p>
      </div>
    </div>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} .page-width{
    width:100%;
  }
.custom-section {
  background-color: #f8f5eb;
  padding: 40px 20px;
  text-align: center;
  display: grid;
  justify-items: center;
}
.title {
  font-size: 32px;
  font-weight: bold;
}
.title-left {
  align-self: flex-start;
}
.title-right {
  align-self: flex-end;
}
.offset {
  margin-left: 20px;
}
.content {
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.images {
  display: flex;
  justify-content: flex-end;
  gap: 40px;
  margin-right: 30px;
  margin-top: 20px;
}
.image-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.image-box img {
  width: 80px;
  height: 40px;
}
.image-box p {
  font-size: 16px;
  margin-top: 10px;
}

@media screen and (max-width: 768px) {
  .offset{
      margin-left: unset;
  }
  .title-left{
    align-self: unset;
  }
  .custom-section {
    flex-direction: column;
    align-items: center;
  }
  .images {
    margin-right:0px;
    flex-direction: row;
    justify-content: center;
    gap: 20px;
  }
  .image-box img {
    max-width: 60px;
  }
}
</style>