  <script>
  document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".show_button button");
    const contents = document.querySelectorAll(".tab_contant");

    // 默认显示第一个 tab，隐藏其他 tab
    function hideAllTabs() {
      contents.forEach((content) => content.style.display = "none");
    }

    function showTab(index) {
      hideAllTabs();
      contents[index].style.display = "flex"; // 根据你的布局设置适当的显示样式
    }

    // 初始化，默认显示第一个 tab
    hideAllTabs();
    if (contents.length > 0) {
      contents[0].style.display = "flex";
    }

    // 按钮点击事件
    // buttons.forEach((button, index) => {
    //   button.addEventListener("click", () => showTab(index));
    // });

    // 为每个按钮添加点击事件
    buttons.forEach((button,index) => {
      button.addEventListener('click', function(e) {
        // e.preventDefault();
        // 移除所有按钮的active类
        buttons.forEach(btn => btn.classList.remove('active'));
        
        // 为当前点击的按钮添加active类
        this.classList.add('active');
        
        // 这里可以添加其他逻辑，如切换内容等
        
        showTab(index)
      });
    });
  });
</script>

